{% extends 'base.html.twig' %}

{% block title %}ReportingType index{% endblock %}

{% block body %}
    <h1>ReportingType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reporting_type in reporting_types %}
            <tr>
                <td>{{ reporting_type.id }}</td>
                <td>{{ reporting_type.designation }}</td>
                <td>
                    <a href="{{ path('reporting_type_show', {'id': reporting_type.id}) }}">show</a>
                    <a href="{{ path('reporting_type_edit', {'id': reporting_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reporting_type_new') }}">Create new</a>
{% endblock %}
