<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!--<link href="../node_modules/mdbootstrap/css/bootstrap.css" rel="stylesheet">
            <link href="../node_modules/mdbootstrap/css/mdb.css" rel="stylesheet">-->
            <link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css">

        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Outil de Reporting</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    {% if is_granted('ROLE_ADMIN') %}
                        <span style="color:red;">Administrateur</span>
                        <li class="nav-item"> <!-- class pour activer : active -->
                            <a class="nav-link" href="/reporting">Reportings</a>
                        </li>
                       <!--<li class="nav-item">
                            <a class="nav-link" href="/intervention">Interventions</a>
                        </li>-->
                        <li class="nav-item">
                            <a class="nav-link" href="/user">Utilisateurs</a>
                        </li>
                    {% elseif is_granted('ROLE_PILOTE') %}
                        <span style="color:red;">Pilote</span>
                        <li class="nav-item"> <!-- class pour activer : active -->
                            <a class="nav-link" href="/reporting">Reportings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/intervention">Interventions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user">Utilisateurs</a>
                        </li>
                    {% elseif is_granted('ROLE_CLIENTFINAL') %}
                        <span style="color:red;">Final</span>
                        <li class="nav-item">
                            <a class="nav-link" href="/intervention">Interventions</a>
                        </li>
                    {% endif %}
                </ul>
                <form action="{{ path('logout') }}" class="form-inline my-2 my-lg-0">
                    <button class="btn btn-danger my-2 my-sm-0" type="submit">DÃ©connexion</button>
                </form>
            </div>
        </nav>
        <div class="container" style="margin-top:100px;">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script type="javascript" src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
            <script type="javascript" src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
